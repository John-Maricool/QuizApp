<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/timer"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ProgressBar
        android:id="@+id/determinate_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_below="@+id/timer"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:animationResolution="@android:integer/config_shortAnimTime"
        android:max="20"
        android:progress="20"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/green" />

    <TextView
        android:id="@+id/display_questions"
        android:text="@string/questions"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:textColor="@color/Black"
        android:textStyle="italic|normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/questions"
        android:layout_below="@+id/display_questions"
        android:textSize="15sp"
        android:textColor="@color/Blue"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_margin="30dp"
        android:layout_height="wrap_content" />


    <RadioGroup
        android:id="@+id/radGroup"
        android:padding="15dp"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/questions"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/option0"
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/option1"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:textColor="@color/Black"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/option2"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:textColor="@color/Black"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/option3"
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>


    <Button
        android:id="@+id/Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radGroup"
        android:text="@string/NEXT"
        android:textSize="15sp"
        android:onClick="next"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@drawable/rounded_corners"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/Show_Answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Next"
        android:text="@string/Show_answer"
        android:textSize="15sp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginTop="10dp"
        android:onClick="Show_Answer"
        android:background="@drawable/second_rounded_corners"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />

</merge>