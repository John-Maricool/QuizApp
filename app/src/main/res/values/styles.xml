<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppCompat" parent="Theme.AppCompat.NoActionBar">
        <item name="color">#CAC1C1</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Custon.NavigationView" parent ="Theme.AppCompat.DayNight">
        <item name="itemIconTint">@color/Blue</item>
        <item name="itemTextColor">@color/Blue</item>
        <item name="itemBackground">@color/white</item>
    </style>

</resources>
